<% if notice %>
  <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<h1>Alarms</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <% @alarms.each do |alarm| %>
      <div class="row">
        <tr>
          <div class="col-sm-6 ml-auto">
            <td><%= alarm.message %></td>
          </div>
          <div class="col-sm-2 ml-auto">
            <td>
              <%= link_to alarm_upvotes_path(alarm), :method=> :post do%>
                  <i class="far fa-arrow-alt-circle-up"></i>
              <% end %>
            </td>
          </div>
          <div class="col-sm-2 ml-auto">
            <td><%= link_to 'Show', alarm %></td>
          </div>
          <div class="col-sm-2 ml-auto">
            <td><%= link_to 'Edit', edit_alarm_path(alarm) %></td>
          </div>
          <div class="col-sm-2 ml-auto">
            <td><%= link_to 'Destroy', alarm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Alarm', new_alarm_path %>
