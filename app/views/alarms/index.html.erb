<% if notice %>
  <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<h1>Alarms</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <% @alarms.each do |alarm| %>
        <div class="row">
            <div class="col-sm-2">
              <%= link_to alarm_upvotes_path(alarm), :method=> :post do%>
                  <i class="far fa-arrow-alt-circle-up">
                    <%= alarm.upvote.present? ? alarm.upvote.vote_count : 0 %>
                  </i>
              <% end %>
            </div>
            <div class="col-sm-7">
              <%= alarm.message %>
            </div>
            <div class="col-sm-1">
              <%= link_to 'Show', alarm %>
            </div>
            <div class="col-sm-1">
              <%= link_to 'Edit', edit_alarm_path(alarm) %>
            </div>
            <div class="col-sm-1">
              <%= link_to 'Destroy', alarm, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
      <% end %>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Alarm', new_alarm_path %>
